$accentColor = #3eaf7c // 主题色
$textColor = #2c3e50 // 文字颜色
$borderColor = #eaecef // 边框颜色
$codeBgColor = #282c34 // 代码背景颜色
*{
  font-size 15px;
}
.content:not(.custom) {
  max-width: 800px;
  margin: 0 auto;
  padding: 1.5rem 1.5rem;
}
.content code {
  color: #e96900;
  padding: 0.25rem 0.5rem;
  margin: 0;
  font-size: 0.85em;
  background-color: rgba(27,31,35,0.05);
  border-radius: 3px;
}
table th:first-of-type {
  width: 80px;
}